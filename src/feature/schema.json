{
  "$schema": "http://json-schema.org/schema",
  "$id": "FeatureSchema",
  "title": "Feature Options",
  "type": "object",
  "properties": {
    "name": { "type": "string", "description": "The name of the feature" },
    "path": { "type": "string", "description": "The path to create the feature" },
    "cqrs": { "type": "boolean", "description": "Generate CQRS files", "default": false },
    "flat": { "type": "boolean", "description": "Create without a subfolder", "default": false }
  },
  "required": ["name"]
}
